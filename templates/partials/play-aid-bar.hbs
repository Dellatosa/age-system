<div class="flexrow general-aid-bar {{#unless isBlock}}colorset-first-tier{{/unless}}">

    {{#unless isBlock}}
    {{!-- Advancement Points Log --}}
    <div class="flexcol flex-align-center">
        <label>{{localize "age-system.advPoints"}}</label>
        <input type="number" name="system.xp.advPoints" value="{{data.system.xp.advPoints}}" data-dtype="Number" />
    </div>

    {{!-- Threshold Tracker --}}
    <div class="flexcol flex-align-center">
        <label>{{localize "age-system.testThreshold"}}</label>
        <input type="number" name="system.advTestThreshold" value="{{data.system.advTestThreshold}}" data-dtype="Number" />
    </div>
    {{/unless}}

    {{!-- Aim Control --}}
    <div class="flexcol flex-align-center feature-controls">
        <label>{{localize "age-system.aim"}}</label>
        <div class="flexrow no-flexwrap">
            {{#unless isBlock}}
            <input type="number" name="system.aim.value" value="{{data.system.aim.value}}" data-dtype="Number" />
            {{/unless}}
            <input type="checkbox" name="system.aim.active" {{checked data.system.aim.active}} class="checkbox"/>
        </div>
    </div>

    {{!-- All Out Attack Control --}}
    <div class="flexcol flex-align-center">
        <label>{{localize "age-system.allOutAttack"}}</label>
        <div class="flexrow no-flexwrap">
            {{#unless isBlock}}
            <input type="number" name="system.allOutAttack.dmgBonus" value="{{data.system.allOutAttack.dmgBonus}}" data-dtype="Number" />
            <div>+</div>
            <input type="number" name="system.allOutAttack.defensePenalty" value="{{data.system.allOutAttack.defensePenalty}}" data-dtype="Number" />
            <div>-</div>
            {{/unless}}
            <input type="checkbox" name="system.allOutAttack.active" {{checked data.system.allOutAttack.active}} class="checkbox"/>
        </div>
    </div>

    {{!-- Defend Maneuver Control --}}
    <div class="flexcol flex-align-center feature-controls" data-guardup-active="{{data.system.guardUp.active}}">
        <label>{{localize "age-system.defendManeuver"}}</label>
        <div class="flexrow no-flexwrap">
            {{#unless isBlock}}
            <input type="number" name="system.defend.defenseBonus" value="{{data.system.defend.defenseBonus}}" data-dtype="Number" />
            {{/unless}}
            <input type="checkbox" name="system.defend.active" class="defend-maneuver" {{checked data.system.defend.active}} class="checkbox"/>
        </div>
    </div>

    {{!-- Guard Up Maneuver Control --}}
    <div class="flexcol flex-align-center feature-controls" data-defend-active="{{data.system.defend.active}}">
        <label>{{localize "age-system.guardUp"}}</label>
        <div class="flexrow no-flexwrap">
            {{#unless isBlock}}
            <input type="number" name="system.guardUp.defenseBonus" value="{{data.system.guardUp.defenseBonus}}" data-dtype="Number" />
            <div>+</div>
            <input type="number" name="system.guardUp.testPenalty" value="{{data.system.guardUp.testPenalty}}" data-dtype="Number" />
            <div>-</div>
            {{/unless}}
            <input type="checkbox" class="guardup-maneuver" name="system.guardUp.active" {{checked data.system.guardUp.active}} class="checkbox"/>
        </div>
    </div>

    {{#unless isBlock}}
    {{!-- Initiative Mod --}}
    <div class="flexcol flex-align-center">
        <label>{{localize "age-system.initiative"}}</label>
        <div class="flexrow no-flexwrap">
            <input type="number" disabled name="system.initiative" value="{{data.system.initiative}}" data-dtype="Number" />
            <input type="number" name="system.initiativeMod" value="{{data.system.initiativeMod}}" data-dtype="Number" />
            <label>{{localize "age-system.mod"}}</label>
        </div>
    </div>
    {{/unless}}

</div>