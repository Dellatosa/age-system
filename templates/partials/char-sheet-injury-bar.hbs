{{!-- Injury Bar --}}
<div class="injury-bar flexrow general-aid-bar colorset-first-tier">

    <div class="injury-box">
        <div>{{localize "age-system.injury"}} <a><i class="fa fa-heartbeat heal-all-injuries" aria-hidden="true"></i></a></div>
        <div class="flexrow injury-degrees">
            <div class="flexrow degree">
                <div>{{localize "age-system.injuryLight"}}</div>
                <input type="number" name="data.injury.degrees.light" disabled value="{{data.data.injury.degrees.light}}" data-dtype="Number" />
                <div class="flexcol arrow-control light">
                    <a><i class="fa fa-chevron-up change-injury add" aria-hidden="true"></i></a>
                    <a><i class="fa fa-chevron-down change-injury remove" aria-hidden="true"></i></a>
                </div>
            </div>
            <div class="flexrow degree">
                <div>{{localize "age-system.injurySerious"}}</div>
                <input type="number" name="data.injury.degrees.serious" disabled value="{{data.data.injury.degrees.serious}}" data-dtype="Number" />
                <div class="flexcol arrow-control serious">
                    <a><i class="fa fa-chevron-up change-injury add" aria-hidden="true"></i></a>
                    <a><i class="fa fa-chevron-down change-injury remove" aria-hidden="true"></i></a>
                </div>
            </div>
            <div class="flexrow degree">
                <div>{{localize "age-system.injurySevere"}}</div>
                <input type="number" name="data.injury.degrees.severe" disabled value="{{data.data.injury.degrees.severe}}" data-dtype="Number" />
                <div class="flexcol arrow-control severe">
                    <a><i class="fa fa-chevron-up change-injury add" aria-hidden="true"></i></a>
                    <a><i class="fa fa-chevron-down change-injury remove" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
    </div>

    <div class="marks-box">
        <div>{{localize "age-system.injuryMarks"}} <a><i class="fa fa-undo refresh-injury-marks" aria-hidden="true"></i></a></div>
        <div class="flexrow marks-control">
            {{#unless (eq data.injury.degrees.severeMult 1)}}
            <div class="flexcol tracker-container">
                {{#each data.data.injury.marksArray as |tracker|}}
                {{#if tracker}}
                <div class="severe-injury-tracker"></div>
                {{/if}}
                {{/each}}
            </div>
            {{/unless}}
            <input type="number" name="data.injury.marks" disabled value="{{data.data.injury.marks}}" data-dtype="Number" />
            <div class="flexcol arrow-control mark">
                {{!-- <a><i class="fa fa-chevron-up change-injury add" aria-hidden="true"></i></a> --}}
                <a><i class="fa fa-chevron-down change-injury remove" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>

</div>