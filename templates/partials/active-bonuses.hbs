{{!-- Active Bonuses --}}
<div class="flexrol flex-align-center item-card-stats">
    {{#if data.hasModificators}}
    <hr>
    {{/if}}
    <div class="flexrow">
        {{#each data.itemMods as |item|}}
        {{#if item.isActive}}
            <div class="flexcol">
                <label>{{localize (concat "age-system.bonus." @key)}}</label>
                <span>{{item.value}}</span>
            </div>
        {{/if}}
        {{/each}}
    </div>
</div>