{{!-- Persona Tab --}}
<section class="persona-section">
    <div class="flexrow">
        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.drive.drive"}}</label>
            <textarea class="free-text values" name="system.drive.name">{{data.system.drive.name}}</textarea>
        </div>

        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.goals"}}</label>
            <textarea class="free-text values" name="system.goals">{{data.system.goals}}</textarea>
        </div>
    </div>

    <div class="flexrow">
        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.drive.quality"}}</label>
            <textarea class="free-text values" name="system.drive.quality">{{data.system.drive.quality}}</textarea>
        </div>

        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.drive.downfall"}}</label>
            <textarea class="free-text values" name="system.drive.downfall">{{data.system.drive.downfall}}</textarea>
        </div>
    </div>

    <div class="flexrow">
        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.language"}}</label>
            <textarea class="free-text values" name="system.language">{{data.system.language}}</textarea>
        </div>

        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.features"}}</label>
            <textarea class="free-text values" name="system.traits">{{data.system.traits}}</textarea>
        </div>
    </div>

    <div class="resource colorset-third-tier">
        <label class="title">{{localize "age-system.bio"}}</label>
        {{editor data.system.features target="system.features" button=true owner=owner editable=editable}}
    </div>

    {{#if isGM}}
    <div class="flexcol resource persona-row secret-note colorset-third-tier">
        <label class="title">{{localize "age-system.gmNotes"}}</label>
        <textarea class="free-text values" name="system.gmNotes">{{data.system.gmNotes}}</textarea>
    </div>
    {{/if}}

    {{#if owner}}
    <div class="flexcol resource secret-note container colorset-third-tier">
        <label class="title">{{localize "age-system.secretNote"}}</label>
        <textarea class="free-text values" name="system.secretNote">{{data.system.secretNote}}</textarea>
    </div>
    {{/if}}

</section>