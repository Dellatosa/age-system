{{!-- Persona Tab --}}
<section class="persona-section">
    <div class="flexrow">
        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.drive.drive"}}</label>
            <textarea class="free-text values" name="data.drive.name">{{data.data.drive.name}}</textarea>
        </div>

        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.goals"}}</label>
            <textarea class="free-text values" name="data.goals">{{data.data.goals}}</textarea>
        </div>
    </div>

    <div class="flexrow">
        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.drive.quality"}}</label>
            <textarea class="free-text values" name="data.drive.quality">{{data.data.drive.quality}}</textarea>
        </div>

        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.drive.downfall"}}</label>
            <textarea class="free-text values" name="data.drive.downfall">{{data.data.drive.downfall}}</textarea>
        </div>
    </div>

    <div class="flexrow">
        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.language"}}</label>
            <textarea class="free-text values" name="data.language">{{data.data.language}}</textarea>
        </div>

        <div class="resource flexcol colorset-third-tier">
            <label class="title">{{localize "age-system.features"}}</label>
            <textarea class="free-text values" name="data.traits">{{data.data.traits}}</textarea>
        </div>
    </div>

    <div class="resource colorset-third-tier">
        <label class="title">{{localize "age-system.bio"}}</label>
        {{editor content=data.data.features target="data.features" button=true owner=owner editable=editable}}
    </div>

    {{#if isGM}}
    <div class="flexcol resource persona-row secret-note colorset-third-tier">
        <label class="title">{{localize "age-system.gmNotes"}}</label>
        <textarea class="free-text values" name="data.gmNotes">{{data.data.gmNotes}}</textarea>
    </div>
    {{/if}}

    {{#if owner}}
    <div class="flexcol resource secret-note container colorset-third-tier">
        <label class="title">{{localize "age-system.secretNote"}}</label>
        <textarea class="free-text values" name="data.secretNote">{{data.data.secretNote}}</textarea>
    </div>
    {{/if}}

</section>