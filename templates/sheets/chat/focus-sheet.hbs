<form class="{{cssClass}} age-system item focus colorset-selection" autocomplete="off">

    <div class="sheet-content item-stats focus">
        <div class="flexcol">
            {{#if inChat}}
            <div class="item-card-title colorset-first-tier" type="text">{{name}}</div>
            {{else}}
            <input name="name" class="item-card-title colorset-first-tier" type="text" value="{{item.name}}" placeholder="{{localize "age-system.item.name"}}"/>
            {{/if}}
            <div class="item-card-stats flexrow">
                
                {{!-- Item Image --}}
                {{> "systems/age-system/templates/partials/item-image-sheet-card.hbs"}} 
                
                {{!-- Ability key to Focus --}}
                <div class="flexcol">
                    <label>{{localize "age-system.abl"}}</label>
                    {{#if inChat}}
                    <div name="system.useAbl" class="data-input">{{localize (concat "age-system." data.system.useAbl)}}</div>
                    {{else}}
                    <select name="system.useAbl" class="data-input">
                        {{#select data.system.useAbl}}
                        
                        {{#if data.system.isOrg}}
                        {{#each config.abilitiesOrg as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        
                        {{else}}

                        {{#each config.abilities as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/if}}

                        {{/select}}
                    </select>
                    {{/if}}
                </div>

                {{!-- Improved Focus --}}
                <div class="flexcol">
                    <label>{{localize "age-system.improvedFocus"}}</label>
                    <input type="checkbox" {{#if inChat}}disabled{{/if}} name="system.improved" {{checked data.system.improved}} class="checkbox"/>
                </div>

                {{#if displayIsOrg}}
                {{!-- Is Organization Focus --}}
                <div class="flexcol">
                    <label>{{localize "age-system.orgFocus"}}</label>
                    <input type="checkbox" name="system.isOrg" {{checked data.system.isOrg}} class="checkbox"/>
                </div>
                {{/if}}

                {{#if inChat}}
                {{else}}
                {{!-- Focus Initial Value --}}
                <div class="flexcol">
                    <label>{{localize "age-system.focusInput"}}</label>
                    <input type="number" name="system.initialValue" value="{{data.system.initialValue}}" class="checkbox"/>
                </div>
                {{/if}}

                {{!-- Focus Final Value --}}
                <div class="flexcol">
                    <label>{{localize "age-system.total"}}</label>
                    <input type="number" disabled name="system.finalValue" value="{{data.system.finalValue}}" class="checkbox"/>
                </div>

            </div>
        </div>
        <div class="item-card-desc">
            <label>{{localize "age-system.item.desc"}}</label>
            {{editor data.system.longDesc target="system.longDesc" button=true owner=owner editable=true}}
        </div>
    </div>
    
</form>
