<form class="{{cssClass}} age-system item weapon colorset-selection" autocomplete="off">

    <div class="sheet-content item-stats weapon">
        <div class="flexcol">
            {{#if inChat}}
            <div class="item-card-title colorset-first-tier">{{name}}</div>
            {{else}}
            <input name="name" class="item-card-title colorset-first-tier" type="text" value="{{item.name}}" placeholder="{{localize "age-system.item.name"}}"/>
            {{/if}}
            <div class="item-card-stats flexrow">

                {{!-- Item Image --}}
                {{> "systems/age-system/templates/partials/item-image-sheet-card.hbs"}} 

                {{!-- Ability/Focus to activate item --}}
                {{> "systems/age-system/templates/partials/ability-focus-select.hbs"}}

                {{!-- Damage Composition and Damage Type --}}
                {{> "systems/age-system/templates/partials/dmg-block-sheet.hbs"}}

                {{!-- Minimum Strenght --}}
                <div class="flexcol">
                    <label>{{localize "age-system.item.minStr"}}</label>
                    <input name="system.minStr" type="text" {{#if inChat}}disabled{{/if}} value="{{data.system.minStr}}" placeholder="-" data-dtype="String"/>
                </div>
                {{!-- Purchase Block --}}
                <div class="flexcol">
                    {{> "systems/age-system/templates/partials/cost-resource-block.hbs"}}
                </div>
                {{!-- ROF --}}
                <div class="flexcol">
                    <label>{{localize "age-system.rof.rof"}}</label>
                    {{#if inChat}}
                    <div>{{localize (concat "age-system.rof." data.system.rof)}}</div>
                    {{else}}
                    <select name="system.rof">
                        {{#select data.system.rof}}
                        {{#each config.rof as |rof|}}
                        <option value="{{@key}}">{{localize rof}}</option>
                        {{/each}}
                        {{/select}}
                    </select>  
                    {{/if}}                  
                </div>
                {{!-- Range --}}
                <div class="flexcol">
                    <label>{{localize "age-system.item.range"}} ({{localize "age-system.item.yards"}})</label>                    
                    <div class="flexrow">
                        <input type="number" {{#if inChat}}disabled{{/if}} name="system.range" value="{{data.system.range}}" data-dtype="Number" />
                        /
                        <input type="number" {{#if inChat}}disabled{{/if}} name="system.rangeMax" value="{{data.system.rangeMax}}" data-dtype="Number" />
                    </div>        
                </div>
                {{!-- Capacity --}}
                <div class="flexcol">
                    <label>{{localize "age-system.item.capacity"}}</label>
                    <input type="text" {{#if inChat}}disabled{{/if}} name="system.capacity" value="{{data.system.capacity}}" data-dtype="Number" />                    
                </div>
                {{!-- Reload --}}
                <div class="flexcol">
                    <label>{{localize "age-system.item.reload"}}</label>
                    {{#if inChat}}
                    <div>{{localize (concat "age-system." data.system.reload)}}</div>
                    {{else}}
                    <select name="system.reload" {{#if inChat}}disabled{{/if}}>
                        {{#select data.system.reload}}
                        {{#each config.reloadDuration as |reloadDuration|}}
                        <option value="{{@key}}">{{localize reloadDuration}}</option>
                        {{/each}}
                        {{/select}}
                    </select>    
                    {{/if}}                   
                </div>
                {{!-- Quantity --}}
                <div class="flexcol">
                    <label>{{localize "age-system.item.quantity"}}</label>
                    <input type="number" {{#if inChat}}disabled{{/if}} name="system.quantity" value="{{data.system.quantity}}" data-dtype="Number" />
                </div>
                {{!-- Weight --}}
                <div class="flexcol">
                    <label>{{localize "age-system.item.weight"}}</label>
                    <input type="number" {{#if inChat}}disabled{{/if}} name="system.weight" value="{{data.system.weight}}" data-dtype="Number" />
                </div>
            </div>

            {{!-- Active Bonuses --}}
            {{> "systems/age-system/templates/partials/active-bonuses.hbs"}}        


            {{#if inChat}}
            {{!-- Description --}}
            <div class="item-card-desc">
                <label>{{localize "age-system.item.desc"}}</label>
                {{editor data.system.longDesc target="system.longDesc" button=true owner=owner editable=true}}
            </div>
            {{/if}}

        </div>

        {{#if inChat}}
        {{else}}
        {{!-- Tab Control --}}
        {{> "systems/age-system/templates/partials/bonus-desc-sheet.hbs"}}
        {{/if}}

    </div>
</form>
{{#if inChat}}
    {{> "systems/age-system/templates/partials/item-card-buttons.hbs"}}
{{/if}}