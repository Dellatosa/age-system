<form class="{{cssClass}} age-system item relationship colorset-selection" autocomplete="off">

    <div class="sheet-content item-stats relationship">
        <div class="flexcol">
            {{#if inChat}}
            <div class="item-card-title colorset-first-tier" type="text">{{name}}</div>
            {{else}}
            <input name="name" class="item-card-title colorset-first-tier" type="text" value="{{item.name}}" placeholder="{{localize "age-system.item.name"}}"/>
            {{/if}}
            <div class="item-card-stats flexrow">
                {{!-- Item Image --}}
                {{> "systems/age-system/templates/partials/item-image-sheet-card.hbs"}} 
                
                <div class="flexcol">
                    {{!-- Bond --}}
                    <div class="flexrow long-text flex-align-start" style="width: 100%;">
                        <label>{{localize "age-system.relationshipBond"}}</label>
                        {{#if inChat}}
                        <p>{{data.system.shortDesc}}</p>
                        {{else}}
                        <input name="system.shortDesc" class="long-text" type="text" text-type="long" value="{{data.system.shortDesc}}" placeholder="{{localize "age-system.relationshipBond"}}"/>
                        {{/if}}
                    </div>

                    {{!-- Intensity --}}
                    <div class="flexrow flex-align-start">
                        <label>{{localize "age-system.relationshipIntensity"}}</label>
                        <div class="flexrow">
                            <input type="number" {{#if inChat}}disabled{{/if}} name="system.intensity" value="{{data.system.intensity}}"/>
                            <span> / </span>
                            <input type="number" {{#if inChat}}disabled{{/if}} name="system.intensityMax" value="{{data.system.intensityMax}}"/>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="item-card-desc">
            <label>{{localize "age-system.item.desc"}}</label>
            {{editor data.system.longDesc target="system.longDesc" button=true owner=owner editable=true}}
        </div>
    </div>
    
</form>
