<form class="{{cssClass}}" autocomplete="off">
 
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>

    <div class="sheet-content">

        <div class="grid-resp">

            <div>
                <p>{{localize "age-system.focus.keyAtt"}}</p>
                <select name="data.keyAtt">
                    {{#select data.keyAtt}}
                    {{#each config.attributes as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
            </div>

            <div>
                <p>{{localize "age-system.focus.improved"}}</p>
                <input type="checkbox" name="data.improved" {{checked data.improved}} class="checkbox" />
            </div>

        </div>

        {{editor content=data.longDesc target="data.longDesc" button=true owner=owner editable=editable}}
    </div>
</form>
