<form class="{{cssClass}} age-system item relationship colorset-selection colorset-modern-blue" autocomplete="off">

    <div class="sheet-content item-stats relationship">
        <div class="flexcol">
            {{#if inChat}}
            <div class="item-card-title colorset-first-tier" type="text">{{name}}</div>
            {{else}}
            <input name="name" class="item-card-title colorset-first-tier" type="text" value="{{item.name}}" placeholder="{{localize "age-system.item.name"}}"/>
            {{/if}}
            <div class="item-card-stats flexcol">
                
                {{!-- Bond --}}
                <div class="flexrow long-text">
                    <label>{{localize "age-system.relationshipBond"}}: </label>
                    {{#if inChat}}
                    <p>{{data.shortDesc}}</p>
                    {{else}}
                    <input name="data.shortDesc" class="long-text" type="text" text-type="long" value="{{data.shortDesc}}" placeholder="{{localize "age-system.relationshipBond"}}"/>
                    {{/if}}
                </div>

                {{!-- Intensity --}}
                <div class="flexrow">
                    <label>{{localize "age-system.relationshipIntensity"}}: </label>
                    <input type="number" {{#if inChat}}disabled{{/if}} name="data.intensity" value="{{data.intensity}}"/>
                </div>

            </div>
        </div>
        <div class="item-card-desc">
            <label>{{localize "age-system.item.desc"}}</label>
            {{editor content=data.longDesc target="data.longDesc" button=true owner=owner editable=editable}}
        </div>
    </div>
    
</form>
