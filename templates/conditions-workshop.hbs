<div class="flexrow conditions-workshop">

    <div class="column defenders">
        <h2>Token Effects</h2>
        <div class="targets">
            {{#each conditions as |condition i|}}
            <div class="individual-effects flexcol feature-controls" data-condition-i="{{i}}">
                <div class="flexrow">
                    <img class="item-image" src="{{condition.icon}}" title="{{condition.label}}" width="100" height="100"/>
                    <div>
                        <input type="text" class="user-entry" name="conditions.{{i}}.label" value="{{condition.label}}" data-dtype="Number" data-field='name'/>
                        <textarea class="user-entry" name="conditions.{{i}}.flags.age-system.desc" data-field='desc' cols="30" rows="10">{{#with (lookup condition.flags "age-system")~}}{{desc}}{{/with}}</textarea>
                    </div>
                </div>
                <div class="effects">
                    <header class="effect-change effects-header flexrow">
                        <div class="key">{{ localize "EFFECT.ChangeKey" }}</div>
                        <div class="mode">{{ localize "EFFECT.ChangeMode" }}</div>
                        <div class="value">{{ localize "EFFECT.ChangeValue" }}</div>
                        <div class="effect-controls">
                            <a class="effect-control" data-action="add"><i class="far fa-plus-square"></i></a>
                        </div>
                    </header>
                    <ol class="changes-list">
                        {{#each condition.changes as |change i|}}
                        <li class="effect-change flexrow" data-index="{{i}}">
                            <div class="key">
                                <input type="text" class="user-entry" name="changes.{{i}}.key" value="{{change.key}}"/>
                            </div>
                            <div class="mode">
                                <select name="changes.{{i}}.mode" class="user-entry" data-dtype="Number">
                                    {{selectOptions ../../modes selected=change.mode}}
                                </select>
                            </div>
                            <div class="value">
                                <input type="text" class="user-entry" name="changes.{{i}}.value" value="{{change.value}}"/>
                            </div>
                            <div class="effect-controls">
                                <a class="effect-control" data-action="delete"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                        {{/each}}
                    </ol>
                </div>
            </div>
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
        </div>
    </div>

